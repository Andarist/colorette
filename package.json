{
  "name": "colorette",
  "version": "1.2.1",
  "type": "module",
  "main": "index.cjs",
  "module": "index.js",
  "types": "index.d.ts",
  "description": "Terminal colors and styles for Node.js.",
  "repository": "jorgebucaran/colorette",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./index.cjs",
      "import": "./index.js"
    }
  },
  "files": [
    "*.*(c)[tj]s*"
  ],
  "author": "Jorge Bucaran",
  "keywords": [
    "terminal",
    "styles",
    "color",
    "ansi"
  ],
  "scripts": {
    "test": "c8 testmatrix test/*.cjs",
    "build": "node -e \"fs.writeFileSync('index.cjs',fs.readFileSync('index.js','utf8').replace(/export const /g,'exports.'),'utf8')\"",
    "release": "v=$npm_package_version; git commit -am $v && git tag -s $v -m $v && git push && git push --tags && npm publish"
  },
  "devDependencies": {
    "c8": "7.3.5",
    "testmatrix": "0.1.2"
  }
}
